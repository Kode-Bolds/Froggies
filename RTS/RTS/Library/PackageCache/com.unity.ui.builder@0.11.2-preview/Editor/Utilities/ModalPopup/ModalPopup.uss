.unity-modal-popup {
    position: absolute;
    top: 0px;
    bottom: 0px;
    left: 0px;
    right: 0px;
}

.unity-modal-popup--invisible {
    display: none;
}

.unity-modal-popup__aligning-container {
    flex-grow: 1;
    flex-direction: column;
    align-content: center;
    align-items: center;
    justify-content: center;
}

.unity-modal-popup__window {
    width: 300px;
    min-height: 100px;
    border-width: 4px;
}

.unity-modal-popup__container {
    flex-grow: 1;
    padding: 2px;
}